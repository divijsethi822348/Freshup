<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SnekersActivity">
    <ImageView
        android:layout_alignParentTop="true"
        android:layout_width="499dp"
        android:layout_height="170dp"
        android:src="@drawable/background_hari_wax"
        android:scaleType="fitXY"/>

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:id="@+id/snekers_image"
        android:layout_alignParentTop="true"
        android:src="@drawable/hair_wax"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SNEAKERS"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_below="@+id/snekers_image"
        android:textColor="#fff"
        android:layout_marginTop="15dp"/>
    <android.support.v7.widget.CardView
        android:layout_width="380dp"
        android:layout_height="340dp"
        android:layout_marginTop="150sp"
        android:layout_marginLeft="50sp"
        android:layout_centerHorizontal="true"
        android:elevation="20dp"
        app:cardCornerRadius="20sp">

        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:elevation="10sp"
            app:cardCornerRadius="10sp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/nike"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NIKE"
                    android:textSize="15dp"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </android.support.v7.widget.CardView>

</RelativeLayout>