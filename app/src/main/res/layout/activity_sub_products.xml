<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SubProductsActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/products_background"
        android:src="@drawable/perfume_background"
        android:scaleType="fitXY"/>

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/image_products"
        android:layout_alignParentTop="true"
        android:src="@drawable/perfume"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VETEMENTS"
        android:id="@+id/title_products"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_below="@+id/image_products"
        android:textColor="#fff"
        android:layout_marginTop="15dp"/>
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_products"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:elevation="20dp"
        app:cardCornerRadius="10sp">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sub_products_recycler">


        </android.support.v7.widget.RecyclerView>


    </android.support.v7.widget.CardView>
</RelativeLayout>