<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ForgotPassword">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/backgrond_"
        android:layout_marginTop="-50dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60sp"
        android:id="@+id/logo"/>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="200dp">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:clipToPadding="true"
                android:elevation="20dp"
                android:id="@+id/sign_in_card"
                app:cardCornerRadius="15sp"
                android:layout_marginLeft="60dp"
                android:layout_centerHorizontal="true"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SIGN IN"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15sp"
                        android:textSize="20sp"
                        android:textColor="#FFC107"
                        android:id="@+id/signin"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:layout_below="@+id/signin"
                        android:layout_marginTop="20sp"
                        android:textColor="#000"
                        android:textSize="14dp"
                        android:id="@+id/email"
                        android:layout_marginLeft="35sp"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="25sp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="40sp"
                        android:layout_below="@+id/email"
                        android:drawableLeft="@drawable/mail"
                        android:hint="Email..."
                        android:inputType="textEmailAddress"
                        android:drawablePadding="15sp"
                        android:id="@+id/et_email"
                        android:layout_marginTop="10sp"
                        android:background="@drawable/rectangle_edittext"
                        android:elevation="10sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Password"
                        android:layout_below="@+id/et_email"
                        android:layout_marginTop="20sp"
                        android:textColor="#000"
                        android:textSize="14dp"
                        android:id="@+id/new_password"
                        android:layout_marginLeft="35sp"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:paddingLeft="25sp"
                        android:inputType="textPassword"
                        android:layout_marginLeft="40sp"
                        android:layout_below="@+id/new_password"
                        android:drawableLeft="@drawable/lock"
                        android:drawablePadding="15sp"
                        android:hint="********"
                        android:id="@+id/et_new_password"
                        android:elevation="10sp"
                        android:layout_marginTop="10sp"
                        android:background="@drawable/rectangle_edittext"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confirm New Password"
                        android:layout_below="@+id/et_new_password"
                        android:layout_marginTop="20sp"
                        android:textColor="#000"
                        android:textSize="14dp"
                        android:id="@+id/confirm_new_pass"
                        android:layout_marginLeft="35sp"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:paddingLeft="25sp"
                        android:inputType="textPassword"
                        android:layout_marginLeft="40sp"
                        android:layout_below="@+id/confirm_new_pass"
                        android:drawableLeft="@drawable/lock"
                        android:drawablePadding="15sp"
                        android:hint="********"
                        android:id="@+id/et_confirm_new_password"
                        android:elevation="10sp"
                        android:layout_marginTop="10sp"
                        android:background="@drawable/rectangle_edittext"
                        />


                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/et_confirm_new_password"
                        android:layout_marginTop="20sp"
                        android:background="@drawable/rectangle_button"
                        android:text="DONE"
                        android:id="@+id/change"
                        android:textSize="15sp"
                        android:textColor="@color/white"/>

                </RelativeLayout>


            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>