<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.ProfileFragment">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/background"
        android:layout_marginTop="-45dp"
        android:id="@+id/background_image"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profile_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/profile_image"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:textSize="20dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/edit"
        android:id="@+id/edit"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15sp"
        android:layout_marginRight="15dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/add"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="250dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="30sp"
        android:layout_centerHorizontal="true"
        android:elevation="20dp"
        app:cardCornerRadius="20sp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="370dp"
                android:layout_height="60dp"
                android:id="@+id/namecard"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50sp"
                app:cardCornerRadius="15sp"
                android:elevation="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="Name"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30sp"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:id="@+id/name_et"
                        android:text="Upkar Singh"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30sp"
                        android:layout_centerVertical="true"
                        android:editable="false"
                        android:backgroundTint="@color/white"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="370dp"
                android:layout_height="60dp"
                android:id="@+id/emailcard"
                android:layout_below="@+id/namecard"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                app:cardCornerRadius="15sp"
                android:elevation="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="Email"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30sp"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:id="@+id/emal_et"
                        android:text="info.omninos.com"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30sp"
                        android:layout_centerVertical="true"
                        android:editable="false"
                        android:backgroundTint="@color/white"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="370dp"
                android:layout_height="60dp"
                android:id="@+id/numbercard"
                android:layout_below="@+id/emailcard"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp"
                app:cardCornerRadius="15sp"
                android:elevation="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="Phone Number"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="30sp"/>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:id="@+id/number_et"
                        android:text="99999-88888"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30sp"
                        android:layout_centerVertical="true"
                        android:editable="false"
                        android:backgroundTint="@color/white"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>