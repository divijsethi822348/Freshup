<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/backgrond_"
        android:layout_marginTop="-50dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60sp"
        android:id="@+id/logo"/>


    <android.support.v7.widget.CardView
        android:layout_width="380dp"
        android:layout_height="550dp"
        android:layout_marginTop="30sp"
        android:clipToPadding="true"
        android:elevation="@dimen/cardview_default_elevation"
        android:layout_below="@+id/logo"
        app:cardCornerRadius="15sp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIGN IN"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15sp"
                android:textSize="20sp"
                android:textColor="#FFC107"
                android:id="@+id/signin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_below="@+id/signin"
                android:layout_marginTop="60sp"
                android:textColor="#000"
                android:textSize="14dp"
                android:id="@+id/email"
                android:layout_marginLeft="10sp"
                />
            <EditText
                android:layout_width="300dp"
                android:layout_height="50sp"
                android:paddingLeft="25sp"
                android:layout_marginLeft="20sp"
                android:layout_below="@+id/email"
                android:drawableLeft="@drawable/mail"
                android:hint="Email..."
                android:inputType="textEmailAddress"
                android:drawablePadding="15sp"
                android:id="@+id/etemail"
                android:layout_marginTop="10sp"
                android:background="@drawable/rectangle_edittext"
                android:elevation="10sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:layout_below="@+id/etemail"
                android:layout_marginTop="20sp"
                android:textColor="#000"
                android:textSize="14dp"
                android:id="@+id/password"
                android:layout_marginLeft="10sp"
                />
            <EditText
                android:layout_width="300dp"
                android:layout_height="50sp"
                android:paddingLeft="25sp"
                android:inputType="textPassword"
                android:layout_marginLeft="20sp"
                android:layout_below="@+id/password"
                android:drawableLeft="@drawable/lock"
                android:drawablePadding="15sp"
                android:hint="Password..."
                android:id="@+id/etpassword"
                android:elevation="10sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/rectangle_edittext"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot password?"
                android:textColor="#000"
                android:layout_below="@+id/etpassword"
                android:id="@+id/forgot_password"
                android:layout_alignParentRight="true"
                android:layout_marginRight="35sp"
                android:layout_marginTop="10sp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/forgot_password"
                android:layout_marginTop="20sp"
                android:background="@drawable/rectangle_button"
                android:text="SIGN IN"
                android:id="@+id/signinbutton"
                android:textColor="#F7F6F6"/>
            <View
                android:layout_width="145dp"
                android:layout_height="1dp"
                android:id="@+id/viewleft"
                android:background="#000"
                android:layout_below="@+id/signinbutton"
                android:layout_marginTop="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Or login with"
                android:layout_marginLeft="3dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/signinbutton"
                android:layout_marginTop="30dp"/>

            <View
                android:layout_width="145dp"
                android:layout_height="1dp"
                android:background="#000"
                android:id="@+id/viewright"
                android:layout_below="@+id/signinbutton"
                android:layout_marginTop="40dp"
                android:layout_alignParentRight="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/facebook_"
                android:layout_below="@+id/viewleft"
                android:layout_marginTop="60sp"
                android:layout_marginLeft="10sp"
                android:id="@+id/facebookimg"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_facebook"
                android:layout_below="@+id/viewleft"
                android:layout_toRightOf="@+id/facebookimg"
                android:layout_marginLeft="10sp"
                android:text="facebook"
                android:textSize="20sp"
                android:id="@+id/facebook_button"
                android:layout_marginTop="45sp"
                android:textColor="#F8F7F7"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/google_plus"
                android:layout_below="@+id/viewleft"
                android:layout_marginTop="60sp"
                android:layout_toLeftOf="@+id/google_plus_button"
                android:layout_marginRight="10sp"
                android:id="@+id/googleimg"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:id="@+id/google_plus_button"
                android:background="@drawable/rectangle_googleplus"
                android:layout_below="@+id/viewleft"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10sp"
                android:layout_marginTop="45sp"
                android:textColor="#F5F0F0"
                android:text="Google +"/>


        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textSize="15dp"
            android:textColor="#000"
            android:layout_marginRight="5sp"
            android:id="@+id/tv"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:clickable="true"
            android:textColor="#FFC107"
            android:onClick="signup"
            android:textSize="15dp"/>
    </LinearLayout>

</RelativeLayout>