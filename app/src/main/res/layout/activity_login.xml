<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/backgrond_"
        android:layout_marginTop="-100dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:id="@+id/logo"/>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/logo"
        android:layout_marginTop="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="true"
                android:elevation="20dp"
                android:id="@+id/sign_in_card"
                app:cardCornerRadius="10sp"
                android:layout_marginLeft="60dp"
                android:layout_centerHorizontal="true"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SIGN IN"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10sp"
                        android:textSize="20sp"
                        android:textColor="@color/used"
                        android:id="@+id/signin"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:layout_below="@+id/signin"
                        android:layout_marginTop="10sp"
                        android:textColor="#000"
                        android:id="@+id/email"
                        android:layout_marginLeft="20sp"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="25sp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="40sp"
                        android:layout_below="@+id/email"
                        android:drawableLeft="@drawable/mail"
                        android:hint="Email..."
                        android:inputType="textEmailAddress"
                        android:drawablePadding="15sp"
                        android:id="@+id/etemail"
                        android:layout_marginTop="10sp"
                        android:background="@drawable/rectangle_edittext"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:layout_below="@+id/etemail"
                        android:layout_marginTop="10sp"
                        android:textColor="#000"
                        android:id="@+id/password"
                        android:layout_marginLeft="20sp"
                        />
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:paddingLeft="25sp"
                        android:inputType="textPassword"
                        android:layout_marginLeft="40sp"
                        android:layout_below="@+id/password"
                        android:drawableLeft="@drawable/lock"
                        android:drawablePadding="15sp"
                        android:hint="********"
                        android:id="@+id/etpassword"
                        android:layout_marginTop="10sp"
                        android:background="@drawable/rectangle_edittext"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Forgot password?"
                        android:textColor="#000"
                        android:layout_below="@+id/etpassword"
                        android:id="@+id/forgot_password"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20sp"
                        android:layout_marginTop="10sp"/>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/forgot_password"
                        android:layout_marginTop="10sp"
                        android:background="@drawable/rectangle_button"
                        android:text="SIGN IN"
                        android:id="@+id/signinbutton"
                        android:textColor="@color/white"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/viewlayout"
                        android:layout_below="@+id/signinbutton"
                        android:weightSum="4"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp">
                        <View
                            android:layout_width="145dp"
                            android:layout_height="1dp"
                            android:id="@+id/viewleft"
                            android:background="#000"
                            android:layout_weight="1"
                            android:layout_marginTop="20dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Or login with"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:layout_weight="2"
                            android:layout_marginTop="13dp"/>

                        <View
                            android:layout_width="145dp"
                            android:layout_height="1dp"
                            android:layout_weight="1"
                            android:background="#000"
                            android:id="@+id/viewright"
                            android:layout_marginTop="20dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="70sp"
                        android:layout_below="@+id/viewlayout"
                        android:weightSum="2"
                        android:layout_marginTop="20sp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:weightSum="10">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/facebook_"
                                android:layout_marginTop="7sp"
                                android:layout_marginLeft="10sp"
                                android:id="@+id/facebookimg"
                                android:layout_weight="1"/>
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:background="@drawable/rectangle_facebook"
                                android:layout_marginLeft="10sp"
                                android:text="facebook"
                                android:layout_weight="9"
                                android:id="@+id/facebook_button"
                                android:textColor="#F8F7F7"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:weightSum="10">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/google_plus"
                                android:id="@+id/googleimg"
                                android:layout_marginTop="7sp"
                                android:layout_marginLeft="10sp"
                                android:layout_weight="1"/>
                            <Button
                                android:layout_weight="9"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginRight="10sp"
                                android:id="@+id/google_plus_button"
                                android:background="@drawable/rectangle_googleplus"
                                android:textColor="#F5F0F0"
                                android:text="Google +" />
                        </LinearLayout>

                    </LinearLayout>


                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/sign_in_card"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10sp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't have an account?"
                    android:textColor="#000"
                    android:layout_marginRight="5sp"
                    android:id="@+id/tv"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"
                    android:clickable="true"
                    android:textColor="@color/used"
                    android:onClick="signup" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>