<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Profile">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/background"
        android:layout_marginTop="-45dp"
        android:id="@+id/background_image"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:gravity="end"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:layout_marginTop="10sp"
            android:textSize="20dp" />

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/edit"
            android:id="@+id/edit"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15sp"
            android:layout_marginTop="15sp"
            />
    </RelativeLayout>






    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/profile_1"
                    android:id="@+id/profile_image"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/add"
                    android:layout_marginTop="130dp"
                    android:layout_marginLeft="120dp"
                    />
            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginTop="250dp"
                android:layout_marginLeft="30sp"
                android:layout_centerHorizontal="true"
                android:elevation="20dp"
                app:cardCornerRadius="20sp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_height="40dp"
                        android:id="@+id/namecard"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="50sp"
                        android:background="@drawable/detailbox">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:text="Name"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="30sp"/>

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:id="@+id/name_et"
                                android:text="Upkar Singh"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="30sp"
                                android:layout_centerVertical="true"
                                android:editable="false"
                                android:backgroundTint="@color/white"/>
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_height="40dp"
                        android:id="@+id/emailcard"
                        android:layout_below="@+id/namecard"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20sp"
                        android:background="@drawable/detailbox">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:text="Email"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="30sp"/>

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:id="@+id/emal_et"
                                android:text="info.omninos.com"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="30sp"
                                android:layout_centerVertical="true"
                                android:editable="false"
                                android:backgroundTint="@color/white"/>
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/numbercard"
                        android:layout_below="@+id/emailcard"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20sp"
                        android:background="@drawable/detailbox">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:text="Phone Number"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="30sp"/>

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15dp"
                                android:id="@+id/number_et"
                                android:text="99999-88888"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="30sp"
                                android:layout_centerVertical="true"
                                android:editable="false"
                                android:backgroundTint="@color/white"/>
                        </RelativeLayout>

                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle_button"
                        android:layout_below="@id/numbercard"
                        android:layout_marginTop="50sp"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/logout_button"
                        android:elevation="20sp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/log_out"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="100dp"
                            android:id="@+id/logout_img"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LOG OUT"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:layout_toRightOf="@+id/logout_img"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"/>
                    </RelativeLayout>

                </RelativeLayout>




            </android.support.v7.widget.CardView>
        </RelativeLayout>


    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>