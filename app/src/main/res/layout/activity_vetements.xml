<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.VetementsActivity">

    <ImageView
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/perfume_background"
        android:scaleType="fitXY"/>

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:id="@+id/vetements_image"
        android:layout_alignParentTop="true"
        android:src="@drawable/perfume"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VETEMENTS"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_below="@+id/vetements_image"
        android:textColor="#fff"
        android:layout_marginTop="15dp"/>
    <android.support.v7.widget.CardView
        android:layout_width="414dp"
        android:layout_height="210dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="50sp"
        android:layout_centerHorizontal="true"
        android:elevation="20dp"
        app:cardCornerRadius="20sp">
        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="127dp"
            android:layout_height="170dp">

            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="80dp"
                android:layout_height="140dp"
                android:id="@+id/p1"
                android:layout_marginLeft="15dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/tshirt"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tshirts"
                android:textSize="15dp"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="100dp"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="10dp"
            android:layout_width="125dp"
            android:layout_marginLeft="151dp"
            android:layout_height="170dp">

            <ImageView
                android:id="@+id/i"
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_marginLeft="19dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/zara" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zara Perfume"
                android:textSize="17dp"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:layout_below="@+id/p1"
                android:textColor="#000"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="110dp"/>
        </android.support.v7.widget.CardView>

    </android.support.v7.widget.CardView>
</RelativeLayout>